@model Models.Role

@{
	string title = "Delete Role";

	ViewBag.Title = title;
}

<h2>
	@(title)
</h2>

<hr />

<h3>
	Are you sure you want to delete this?
</h3>

<div class="row">
	<div class="col-sm-3">
		@Html.DisplayNameFor(model => model.IsActive)
	</div>
	<div class="col-sm-9">
		@Html.DisplayFor(model => model.IsActive)
	</div>
</div>

<div class="row">
	<div class="col-sm-3">
		@Html.DisplayNameFor(model => model.Name)
	</div>
	<div class="col-sm-9">
		@Html.DisplayFor(model => model.Name)
	</div>
</div>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-actions no-color">
		<button type="submit" class="btn btn-danger">Delete</button>
	</div>
}

<div class="row">
	<div class="col-xs-12">
		@Html.ActionLink("Back to List", MVC.Roles.Index())
		|
		@Html.ActionLink("Details", MVC.Roles.Details(Model.Id))
		|
		@Html.ActionLink("Edit", MVC.Roles.Edit(Model.Id))
	</div>
</div>
